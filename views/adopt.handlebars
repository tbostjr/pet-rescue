<main>
    {{#with animal}}
    <nav class="container mb-5" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="#">{{animal}}</a></li>
            <li class="breadcrumb-item"><a href="/animal/{{_id}}">{{name}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Adopt</li>
        </ol>
    </nav>
    {{/with}}
    <form id="adoptionForm" class="container" method="POST" action="/animal/adopt/submission">
        <p class="text-primary">Please provide your contact info so we can go over the adoption details!</p>
        <div class="form-group">
            <label for="given_name">First Name</label>
            <input id="given_name" name="given_name" class="form-control" placeholder="John"  type="text" required>
            <div class="invalid-feedback">
                Please provide a first name.
            </div>
        </div>
        <div class="form-group">
            <label for="family_name">Last Name</label>
            <input id="family_name" name="family_name" class="form-control" placeholder="Wick" type="text" required>
            <div class="invalid-feedback">
                Please provide a last name.
            </div>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" class="form-control" placeholder="john.wick@gmail.com" type="email" required>
            <div class="invalid-feedback">
                Please provide an email.
            </div>
        </div>
        <div class="form-group">
            <label for="phone">Phone Number</label>
            <input id="phone" name="phone" class="form-control" placeholder="1 (234) 567-8901" type="tel" required>
            <div class="invalid-feedback">
                Please provide a phone number.
            </div>
        </div>
        <input  id="id" name="id" value="{{animal._id}}" hidden>
        <button id="adoption-submit-btn" class="btn btn-primary" type="submit">Submit</button>
        <button class="btn btn-primary" type="reset">Clear</button>
        <p id="error" class="text-danger"></p>
    </form>
